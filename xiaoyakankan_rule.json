{
  "site": {
    "id": "xiaoyakankan_v1",
    "title": "小鸭看看",
    "version": "1.0",
    "nsfw": 0,
    "categories": {
      "https://xiaoyakankan.com/cat/1-{page:1:1}.html": "电影",
      "https://xiaoyakankan.com/cat/2-{page:1:1}.html": "电视剧",
      "https://xiaoyakankan.com/cat/3-{page:1:1}.html": "综艺",
      "https://xiaoyakankan.com/cat/4-{page:1:1}.html": "动漫"
    },
    "indexUrl": "https://xiaoyakankan.com/cat/1-{page:1:1}.html",
    "searchUrl": "https://xiaoyakankan.com/search?q={keyword:}&p={page:1:1}",
    "galleryUrl": "https://xiaoyakankan.com/vod/{idCode:}.html"
  },

  "rule": {
    "indexRule": {
      "item": {
        "selector": ".module-item",
        "fun": "html"
      },
      "idCode": {
        "selector": ".module-item-cover .module-item-pic > a",
        "fun": "attr",
        "param": "href",
        "regex": "/vod/(.+).html",
        "replace": "$1"
      },
      "title": {
        "selector": ".module-poster-item-title",
        "fun": "text"
      },
      "cover": {
        "selector": ".module-item-pic img",
        "fun": "attr",
        "param": "data-original"
      },
      "datetime": {
        "selector": ".module-item-note",
        "fun": "text"
      },
      "url": {
        "selector": ".module-item-cover .module-item-pic > a",
        "fun": "attr",
        "param": "href"
      }
    },

    "searchRule": {
      "item": {
        "selector": ".module-search-item",
        "fun": "html"
      },
      "idCode": {
        "selector": ".video-serial",
        "fun": "attr",
        "param": "href",
        "regex": "/vod/(.+).html",
        "replace": "$1"
      },
      "title": {
        "selector": ".module-card-item-title",
        "fun": "text"
      },
      "cover": {
        "selector": ".module-item-pic img",
        "fun": "attr",
        "param": "data-original"
      },
       "datetime": {
        "selector": ".module-item-note",
        "fun": "text"
      },
       "url": {
        "selector": ".video-serial",
        "fun": "attr",
        "param": "href"
      }
    },

    "galleryRule": {
      "title": { "selector": "h1", "fun": "text" },
      "intro": { "selector": ".vod_content", "fun": "text" },
      "cover": { "selector": ".module-item-pic img", "fun": "attr", "param": "data-original" },
       "item": {
        "selector": "#sort-item-1 a", 
        "fun": "html"
      },
      "chapter": {
        "selector": "span",
        "fun": "text"
      },
      "url": {
        "selector": "a",
        "fun": "attr",
        "param": "href"
      }
    }
  }
}
